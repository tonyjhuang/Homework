<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TopLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_side_padding"
    android:paddingRight="@dimen/layout_side_padding" >

    <TextView
        android:id="@+id/ClassTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/class_title_text_size" />

    <EditText
        android:id="@+id/ClassBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ClassTitle"
        android:gravity="top"
        android:singleLine="false"
        android:textSize="@dimen/class_body_text_size"
        android:hint="Assignments" />

</RelativeLayout>